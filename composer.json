{
    "name": "passbolt/architecture",
    "description": "Pilot study for Passbolt architecture",
    "type": "project",
    "require": {
        "php": ">=7.3",
        "ramsey/uuid": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "./src",
            "Passbolt\\Ce\\": "./plugins_ce/Ce/src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "ee": "COMPOSER=./plugins_ee/composer-ee.json composer",
        "cloud": "COMPOSER=./plugins_cloud/composer-cloud.json composer",
        "update-ce": "git checkout ce && git checkout main src plugins_ce",
        "update-ee": "git checkout ee && git checkout main src plugins_ce plugins_ee",
        "update-cloud": "git checkout cloud && git checkout main src plugins_ce plugins_ee "
    }
}
